<h1>New Game</h1>
<% @selection.each do |letter| %>
<p class="letter"><%= letter.upcase %></p>
<% end %>
<form action="score" method="post" class="form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @selection.join  %>
  <label for="word">What is the longest word you can see?</label>
  <input type="text" id="word" name=word>
  <input type="submit">
</form>
